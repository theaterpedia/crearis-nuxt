    "url": "https://github.com/theaterpedia/crearis-ui/issues"
  },
  "devDependencies": {
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "vite-plugin-dts": "^4.0.0",
    "@crearis/sfui-ts-config": "workspace:*"
  },
  "dependencies": {
    "tailwindcss": "^3.4.0",
    "@mertasan/tailwindcss-variables": "^2.5.2",
    "@storefront-ui/tw-plugin-peer-next": "2.3.1"
