{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "noEmit": true,
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": ".",
    "types": ["vite/client"],
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,   
    "resolveJsonModule": true, 
  },
  "include": ["**/*.ts"],
  "exclude": ["./dist/**/*"]
}
